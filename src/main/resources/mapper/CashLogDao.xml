<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiein.jupiter.web.dao.CashLogDao">
    <resultMap id="baseMap" type="com.qiein.jupiter.web.entity.vo.CashLogVO">
        <id column="ID" jdbcType="INTEGER" property="id"/>
        <result column="KZID" jdbcType="VARCHAR" property="kzId"/>
        <result column="PAYSTYLE" jdbcType="INTEGER" property="payStyle"/>
        <result column="AMOUNT" jdbcType="INTEGER" property="amount"/>
        <result column="STAFFID" jdbcType="INTEGER" property="staffId"/>
        <result column="STAFFNAME" jdbcType="VARCHAR" property="staffName"/>
        <result column="PAYMENTTIME" jdbcType="VARCHAR" property="paymentTime"/>
        <result column="STATUS" jdbcType="INTEGER" property="status"/>
    </resultMap>
    <sql id="list">
        ID,KZID,PAYSTYLE,AMOUNT,STAFFID,STAFFNAME,FROM_UNIXTIME(PAYMENTTIME, '%Y/%m/%d %H:%i') PAYMENTTIME,STATUS
    </sql>

    <select id="findCashLog" resultMap="baseMap">
        select <include refid="list"/>
        FROM  ${table} where KZID=#{kzId}
    </select>
    <!-- 新增客资日志 -->
    <insert id="addCahsLog" parameterType="map">
        INSERT INTO ${logTabName} (
			KZID, PAYSTYLE, AMOUNT,  STAFFID,  STAFFNAME, PAYMENTTIME, OPERAID, OPERANAME,  CREATETIME, COMPANYID
		)
		VALUES
			(#{log.kzId}, #{log.payStyle}, #{log.amount}, #{log.staffId},#{log.staffName} ,#{log.paymentTime},#{log.operaId},#{log.operaName}, UNIX_TIMESTAMP(NOW()), #{log.companyId}
		)
    </insert>

	<update id="editStatus">
        UPDATE ${table} SET STATUS=0 WHERE ID=#{id}
    </update>
</mapper>