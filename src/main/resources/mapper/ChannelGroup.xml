<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiein.jupiter.web.dao.SourceGroupDao">

    <resultMap id="baseMap" type="com.qiein.jupiter.web.entity.po.ChannelPO">
        <id column="GRPID" jdbcType="INTEGER" property="grpId" />
        <result column="GRPNAME" jdbcType="VARCHAR" property="grpName" />
        <result column="SRCGRPIMG" jdbcType="VARCHAR" property="srcGrpImg" />
        <result column="TYPEID" jdbcType="INTEGER" property="typeId" />
        <result column="BRANDID" jdbcType="INTEGER" property="brandId" />
        <result column="BRANDNAME" jdbcType="VARCHAR" property="brandName" />
        <result column="PUSHRULE" jdbcType="INTEGER" property="pushRule" />
        <result column="COMPANYID" jdbcType="INTEGER" property="companyId" />
        <result column="ISSHOW" jdbcType="BOOLEAN" property="isShow" />
        <result column="PRIORITY" jdbcType="INTEGER" property="priority"/>
    </resultMap>

    <sql id="baseColumn">
        GRPID,GRPNAME,SRCGRPIMG,TYPEID,BRANDID,BRANDNAME,PUSHRULE,COMPANYID,ISSHOW
    </sql>

    <select id="getById" parameterType="integer" resultMap="baseMap">
        <include refid="baseColumn"/>
        FROM
          hm_crm_source_group
        WHERE
          COMPANYID = #{companyId}  AND GRPID = #{grpId}
    </select>

    <select id="findList" resultMap="baseMap">
        SELECT
          <include refid="baseColumn"/>
        <where>
            COMPANYID = #{companyId} ,
            <if test="grpName != null and grpName !=''">
                GRPNAME = #{grpName},
            </if>
            <if test="srcGrpImg != null and srcGrpImg !=''">
                SRCGRPIMG = #{srcGrpImg},
            </if>
            <if test="typeId != null and typeId !=''">
                TYPEID = #{typeId},
            </if>
            <if test="brandId != null and brandId !=''">
                BRANDID = #{brandId},
            </if>
            <if test="brandName != null and brandName !=''">
                BRANDNAME = #{brandName},
            </if>
            <if test="pushRule != null and pushRule !=''">
                PUSHRULE = #{pushRule},
            </if>
            <if test="isShow != null and isShow !=''">
                ISSHOW = #{isShow},
            </if>
        </where>
        ORDER BY ISSHOW DESC, TYPEID ,GRPID
    </select>

    <insert id="insert" parameterType="com.qiein.jupiter.web.entity.po.ChannelPO" useGeneratedKeys="true" keyProperty="grpId">
        INSERT INTO hm_crm_source_group
        (GRPNAME,SRCGRPIMG,TYPEID,BRANDID,BRANDNAME,PUSHRULE,COMPANYID,ISSHOW)
        VALUES (
          #{grpName},#{srcGrpImg},#{typeId},#{brandId},#{brandName},#{pushRule},#{companyId},#{isShow}
        )
    </insert>

    <update id="update" parameterType="com.qiein.jupiter.web.entity.po.ChannelPO">
        UPDATE
          hm_crm_source_group
        <set>
            <if test="grpName != null and grpName != ''">
                GRPNAME = #{grpName},
            </if>
            <if test="srcGrpImg != null and srcGrpImg != ''">
                SRCGRPIMG = #{srcGrpImg},
            </if>
            <if test="typeId != null">
                TYPEID = #{typeId},
            </if>
            <if test="brandId != null">
                BRANDID = #{brandId},
            </if>
            <if test="brandName != null and brandName != ''">
                BRANDNAME = #{brandName},
            </if>
            <if test="pushRule != null">
                PUSHRULE = #{pushRule},
            </if>
            <if test="isShow != null">
                ISSHOW = #{isShow},
            </if>
        </set>
        WHERE
          COMPANYID = #{companyId} AND GRPID = #{grpId}
    </update>

    <delete id="delete" parameterType="integer">
      DELETE
        <include refid="baseColumn"/>
      FROM
        hm_crm_source_group
      WHERE
        COMPANYID = #{companyId} AND GRPID = #{grpId}

    </delete>

    <select id="checkSrcGrp" parameterType="map" resultType="integer">
      SELECT
        COUNT(1)
      FROM
        hm_crm_source_group
      WHERE
        COMPANYID = #{companyId} AND GRPNAME = #{grpName}
    </select>
</mapper>